<html>
<style>
  h1{
    font-family: Arial, Helvetica, sans-serif;
    margin-left: 50px;
  }
  header {
    display: flex;
    height: 100px;
    background: radial-gradient(circle farthest-corner at 42% 106%,#ffe17d 0%,#ffcd69 10%,#fa9137 28%,#eb4141 42%,transparent 82%) , linear-gradient(135deg,#234bd7 12%,#c33cbe 58%);
    align-items: center;
  }
  #logo {
    width: 90px;
    height: 90px;
  }
  div {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    border-radius: 10px;
  }
  .user-info {
    background-color: rgb(255, 215, 222);
    margin: 10px;
    width: 470px;
    height: 120px;
    margin-left: 50px;
  }
  .user-info #user {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-left: 15px;
    margin-right: 15px;
  }
  .user-info #user-button {
    display: flex;
    margin-top: 10px;
    flex-direction: column; 
    align-items: center;   
  }
  #upload {
    display: flex;
    margin-top: 10px;
    flex-direction: column; 
    align-items: center;   
  }
  body {
    margin: 0;
    background-color: white;
  }
  .button {
    height: 20px;
    margin-top: 30px;
  }
  input {
    margin: 0px;
  }
</style>
<body>
  <header>
  <img src="../logo.png" id= "logo" alt="logo-image"/>
  </header>
      <h1>Users</h1>
        
      <% users.forEach(user => { %>
      <div class ="user-info">
            <img id="user" src="/photos/<%= user.username %>/<%= user.profile %>" alt = "profile photos" />
            <form action="/images?user=<%= user.username %>" enctype="multipart/form-data" method="post">
              <input type="file" name="image"><br>
                  <a href="/feed?username=<%= user.username %>">
              <input type="submit" id="upload"value="Upload" />
            </form>
          
              <input type="button" id="user-button" value="<%= user.username %>"/>
            </a>
          </div>
        </div>
        <% }) %>
    </body>
    </html>